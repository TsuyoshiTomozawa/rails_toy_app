<div id="<%= dom_id user %>">
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <h2>Micropost</h2>
  <ul>
    <% user.microposts.each do |micropost| %>
      <li>
        <strong>content:</strong>
        <%= micropost.content %>
      </li>
    <% end %>
  </ul>

</div>
